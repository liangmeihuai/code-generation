<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE generatorConfiguration  
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"  
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
	<context id="mysqlGenerator" targetRuntime="MyBatis3">
		<!-- Pagination -->
		<plugin type="com.mybatis.page.plugin.MySQLPaginationPlugin"></plugin>
<!-- 		<plugin type="com.mybatis.page.plugin.PostgreSQLPaginationPlugin"></plugin> -->

		<!-- 取消注释 -->
		<commentGenerator>
			<property name="suppressDate" value="true" />
			<property name="suppressAllComments" value="true" />
		</commentGenerator>

		<jdbcConnection driverClass="com.mysql.jdbc.Driver"	
		connectionURL="jdbc:mysql://127.0.0.1:33061/mcloud?useUnicode=true"
			userId="mcloud" password="mcpwd" />
			

		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

		<!-- 配置自动生成的Model的保存路径与其它参数 -->
		<javaModelGenerator targetPackage="com.td.report.bean.mcloud"
			targetProject=".\src">
			<property name="enableSubPackages" value="false" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>

		<!-- 配置自动生成的Mappper.xml映射的保存路径与其它参数 -->
		<sqlMapGenerator targetPackage="com.td.report.mapper.mcloud"
			targetProject=".\src">
			<property name="enableSubPackages" value="false" />
		</sqlMapGenerator>

		<!-- 配置自动生成的Mappper.java接口的保存路径与其它参数 -->
		<javaClientGenerator type="XMLMAPPER"
			targetPackage="com.td.report.mapper.mcloud" targetProject=".\src">
			<property name="enableSubPackages" value="false" />
		</javaClientGenerator>
		

		<!-- 生成表对应的操作与实体对象 -->
		<table tableName="team_auth" domainObjectName="TeamAuth" enableUpdateByExample="true">
			<property name="useActualColumnNames" value="true" />
		</table>

		<table tableName="team_email_map" domainObjectName="TeamEmail" enableUpdateByExample="true">
			<property name="useActualColumnNames" value="true" />
		</table>
		<table tableName="tb_applicant_info" domainObjectName="ApplicantInfo" enableUpdateByExample="true">
			<property name="useActualColumnNames" value="true" />
		</table>

	</context>
</generatorConfiguration> 